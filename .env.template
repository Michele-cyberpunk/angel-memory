# OMI Integration API
# Get these from: https://www.omi.me/ → Settings → Developer Mode
OMI_APP_ID=your_omi_app_id_here
OMI_APP_SECRET=your_omi_app_secret_here
OMI_DEV_KEY=your_omi_dev_key_here
OMI_BASE_URL=https://api.omi.me
OMI_USER_UID=your_omi_user_uid_here

# Google Gemini API
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Workspace OAuth2 (da configurare)
GOOGLE_CLIENT_SECRET_FILE=config/client_secret.json
GOOGLE_TOKEN_FILE=config/token.json

# Server Configuration
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# Gemini Model Configuration
GEMINI_PRIMARY_MODEL=gemini-2.5-pro
GEMINI_FALLBACK_MODEL=gemini-2.5-flash
GEMINI_LITE_MODEL=gemini-2.5-flash-lite

# Logging (Optional)
LOG_LEVEL=INFO
DEBUG=false
